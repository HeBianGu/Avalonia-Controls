<UserControl x:Class="Avalonia.App.Explorer.Views.MainView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:h="https://github.com/HeBianGu"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Avalonia.App.Explorer.ViewModels"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:DataType="vm:MainViewModel"
             mc:Ignorable="d">
    <Design.DataContext>
        <vm:MainViewModel />
    </Design.DataContext>
    <DockPanel>
        <Border Height="30"
                Background="{DynamicResource {x:Static BrushKeys.Dark0_2}}"
                DockPanel.Dock="Bottom" />
        <h:ExploreBox />
    </DockPanel>
</UserControl>
