        <TabItem Header="SelectableTextBlock">
            <StackPanel Margin="20">
                <SelectableTextBlock Margin="0,5"
                                     FontSize="18"
                                     FontWeight="Bold">
                    Heading
                </SelectableTextBlock>
                <SelectableTextBlock Margin="0,5"
                                     xml:space="preserve"
                                     FontStyle="Italic"
                                     SelectionBrush="Red">This is a single line.</SelectableTextBlock>
                <SelectableTextBlock Margin="0,5"
                                     xml:space="preserve"
                                     SelectionEnd="13"
