                    </PathIcon>
                </Panel>
            </ToggleButton>
        </TabItem>
        <TabItem Header="ToggleSplitButton">
            <ToggleSplitButton Content="Content">
                <ToggleSplitButton.Flyout>
                    <MenuFlyout Placement="Bottom">
                        <MenuItem Header="Item 1">
                            <MenuItem Header="Subitem 1" />
                            <MenuItem Header="Subitem 2" />
                            <MenuItem Header="Subitem 3" />
                        </MenuItem>
                        <MenuItem Header="Item 2" InputGesture="Ctrl+A" />
                        <MenuItem Header="Item 3" />
                    </MenuFlyout>
                </ToggleSplitButton.Flyout>
            </ToggleSplitButton>
        </TabItem>
        <TabItem Header="Carousel">
            <Panel>
                <Carousel Name="slides">
                    <Carousel.PageTransition>
                        <CompositePageTransition>
                            <PageSlide Orientation="Horizontal" Duration="0:00:00.500" />
                        </CompositePageTransition>
                    </Carousel.PageTransition>
                    <Carousel.Items>
                        <Image Source="avares://HeBianGu.Test.Style/Assets/1.jpg" />
                        <Image Source="avares://HeBianGu.Test.Style/Assets/2.jpg" />
                        <Image Source="avares://HeBianGu.Test.Style/Assets/3.jpg" />
                    </Carousel.Items>
                </Carousel>
                <Panel Margin="20">
                    <Button Background="White" Click="Previous">&lt;</Button>
                    <Button HorizontalAlignment="Right"
                            Background="White"
                            Click="Next">
                        &gt;
                    </Button>
                </Panel>
            </Panel>
        </TabItem>
        <TabItem Header="CheckBox">
            <StackPanel Margin="20">
                <CheckBox>Not checked by default</CheckBox>
                <CheckBox IsChecked="True">Checked by default</CheckBox>
                <CheckBox IsChecked="{x:Null}" IsThreeState="True">IsThreeState</CheckBox>
            </StackPanel>
        </TabItem>
        <TabItem Header="ColorPicker">
            <ColorPicker />
        </TabItem>
        <TabItem Header="ComboBox">
            <StackPanel Margin="20">
                <ComboBox MaxDropDownHeight="100" SelectedIndex="0">
                    <ComboBoxItem>Text Item 1</ComboBoxItem>
                    <ComboBoxItem>Text Item 2</ComboBoxItem>
                    <ComboBoxItem>Text Item 3</ComboBoxItem>
                    <ComboBoxItem>Text Item 4</ComboBoxItem>
                    <ComboBoxItem>Text Item 5</ComboBoxItem>
                    <ComboBoxItem>Text Item 6</ComboBoxItem>
                    <ComboBoxItem>Text Item 7</ComboBoxItem>
                    <ComboBoxItem>Text Item 8</ComboBoxItem>
                    <ComboBoxItem>Text Item 9</ComboBoxItem>
                </ComboBox>
            </StackPanel>
        </TabItem>
        <TabItem Header="ContentControl">
            <ContentControl>
                <ContentControl.Content>
                    1111
                </ContentControl.Content>
                <ContentControl.ContentTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="Auto,Auto" RowDefinitions="Auto,Auto">
                            <TextBlock Grid.Row="0" Grid.Column="0">First Name:</TextBlock>
                            <TextBlock Grid.Row="0"
                                       Grid.Column="1"
                                       Text="FirstName" />
                            <TextBlock Grid.Row="1" Grid.Column="0">Last Name:</TextBlock>
                            <TextBlock Grid.Row="1"
                                       Grid.Column="1"
                                       Text="LastName" />
                        </Grid>
                    </DataTemplate>
                </ContentControl.ContentTemplate>
            </ContentControl>
        </TabItem>
        <TabItem Header="ContextMenu">
            <TextBox AcceptsReturn="True" TextWrapping="Wrap">
                <TextBox.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Copy" />
                        <MenuItem Header="Paste" />
                    </ContextMenu>
                </TextBox.ContextMenu>
            </TextBox>
        </TabItem>
        <TabItem Header="DataGrid">
            <!--<DataGrid Margin="20" ItemsSource="{Binding People}"
                AutoGenerateColumns="True" IsReadOnly="True"
                GridLinesVisibility="All"
                BorderThickness="1" BorderBrush="Gray">
      </DataGrid>-->
            <DataGrid Margin="20"
                      BorderBrush="Gray"
                      BorderThickness="1"
                      GridLinesVisibility="All"
                      IsReadOnly="True">
                <!--  ItemsSource="{Binding People}"  -->
                <DataGrid.Columns>
                    <DataGridTextColumn Width="*"
                                        Binding="{Binding FirstName}"
                                        Header="First Name" />
                    <DataGridTextColumn Width="*"
                                        Binding="{Binding LastName}"
                                        Header="Last Name" />
                </DataGrid.Columns>
                <!--<system:String>111</system:String>
              <system:String>111</system:String>
              <system:String>111</system:String>-->
            </DataGrid>
        </TabItem>
        <TabItem Header="DatePicker">
            <StackPanel Margin="20">
                <DatePicker DayFormat="ddd dd" />
            </StackPanel>
        </TabItem>
        <TabItem Header="Calendar">
            <StackPanel Margin="20">
                <Calendar x:Name="calendar" SelectionMode="MultipleRange" />
                <TextBlock Margin="20" Text="{Binding #calendar.SelectedDate}" />
            </StackPanel>
        </TabItem>
        <TabItem Header="CalendarDatePicker">
            <StackPanel Margin="20">
                <CalendarDatePicker />
            </StackPanel>
        </TabItem>
        <TabItem Header="DataGrid">
            <DataGrid Margin="20"
                      BorderBrush="Gray"
                      BorderThickness="1"
                      GridLinesVisibility="All"
                      ItemsSource="{Binding People}">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="2*"
                                        Binding="{Binding FirstName}"
                                        Header="First Name" />
                    <DataGridTextColumn Width="2*"
                                        Binding="{Binding LastName}"
                                        Header="Last Name" />

                    <DataGridTemplateColumn Header="Age">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate DataType="model:Person">
                                <TextBlock HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Text="{Binding AgeInYears, StringFormat='{}{0} years'}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate DataType="model:Person">
                                <NumericUpDown HorizontalAlignment="Stretch"
                                               FormatString="N0"
                                               Maximum="120"
                                               Minimum="0"
                                               Value="{Binding AgeInYears}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>
        </TabItem>
        <TabItem Header="DrawingImage">
            <DrawingImage>
                <DrawingImage.Drawing>
                    <ImageDrawing ImageSource="/Assets/1.jpg" />
                </DrawingImage.Drawing>
            </DrawingImage>
        </TabItem>
        <TabItem Header="Label">
            <Label Content="Label" />
        </TabItem>
        <TabItem Header="MenuFlyout">
            <Button HorizontalAlignment="Center" Content="Button">
                <Button.Flyout>
                    <MenuFlyout>
                        <MenuItem Header="Open" />
                        <MenuItem Header="-" />
                        <MenuItem Header="Close" />
                    </MenuFlyout>
                </Button.Flyout>
            </Button>
        </TabItem>
