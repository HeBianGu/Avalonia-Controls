<UserControl x:Class="HeBianGu.Test.Style.Views.MainView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:model="clr-namespace:HeBianGu.Test.Style.Models"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:vm="clr-namespace:HeBianGu.Test.Style.ViewModels"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:DataType="vm:MainViewModel"
             mc:Ignorable="d">
    <Design.DataContext>
        <!--
            This only sets the DataContext for the previewer in an IDE,
            to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs)
        -->
        <vm:MainViewModel />
    </Design.DataContext>
    <TabControl TabStripPlacement="Left">
        <TabItem Header="AutoCompleteBox">
            <StackPanel Margin="20">
                <TextBlock Margin="0,5">Choose an animal:</TextBlock>
                <AutoCompleteBox x:Name="animals" FilterMode="StartsWith" />
            </StackPanel>
        </TabItem>
        <TabItem Header="Button">
            <Button Content="{Binding Greeting}" />
        </TabItem>
        <TabItem Header="TextBlock">
            <StackPanel Margin="20">
                <TextBlock Margin="0,5"
                           FontSize="18"
                           FontWeight="Bold">
                    Heading
                </TextBlock>
                <TextBlock Margin="0,5"
                           xml:space="preserve"
                           FontStyle="Italic">This is  a single line.</TextBlock>
                <TextBlock Margin="0,5" xml:space="preserve">This is a multi-line display
that has returns in it.
The text block respects the line breaks
as set out in XAML.</TextBlock>
            </StackPanel>
        </TabItem>
        <TabItem Header="Border">
            <StackPanel>
                <Border Margin="10"
                        Padding="10"
                        Background="Gainsboro"
                        BorderBrush="Black"
                        BorderThickness="2"
                        CornerRadius="3">
                    <TextBlock>Box 1</TextBlock>
                </Border>
                <Border Margin="10"
                        Padding="10"
                        Background="Gainsboro"
                        BorderBrush="Black"
                        BorderThickness="2"
                        CornerRadius="3">
                    <TextBlock>Box 2</TextBlock>
                </Border>
            </StackPanel>
        </TabItem>
        <TabItem Header="Canvas">
            <Canvas Margin="20" Background="AliceBlue">
                <Rectangle Width="100"
                           Height="100"
                           Margin="10"
                           Fill="Red" />
                <Rectangle Canvas.Left="50"
                           Canvas.Top="20"
                           Width="100"
                           Height="100"
                           Fill="Blue"
                           Opacity="0.5" />
                <Rectangle Canvas.Left="60"
                           Canvas.Top="40"
                           Width="100"
                           Height="100"
                           Margin="40"
                           Fill="Green" />
                <Rectangle Canvas.Right="70"
                           Canvas.Bottom="60"
                           Width="100"
                           Height="100"
                           Fill="Orange" />
            </Canvas>
        </TabItem>

        <TabItem Header="DockPanel">
            <DockPanel Width="300" Height="300">
                <Rectangle Height="100"
                           DockPanel.Dock="Top"
                           Fill="Red" />
                <Rectangle Width="100"
                           DockPanel.Dock="Left"
                           Fill="Blue" />
                <Rectangle Height="100"
                           DockPanel.Dock="Bottom"
                           Fill="Green" />
                <Rectangle Width="100"
                           DockPanel.Dock="Right"
                           Fill="Orange"
                           Opacity="0.5" />
                <Rectangle Fill="Gray" />
            </DockPanel>
        </TabItem>

        <TabItem Header="ButtonSpinner">
            <ButtonSpinner Width="130"
                           Height="20"
                           ButtonSpinnerLocation="Left">
                123
            </ButtonSpinner>
        </TabItem>
        <TabItem Header="RadioButton">
            <StackPanel Margin="20">
                <TextBlock Margin="0,10,0,5">First Group</TextBlock>
                <RadioButton Content="First Option" GroupName="First Group" />
                <RadioButton Content="Second Option" GroupName="First Group" />
                <RadioButton Content="Third Option"
                             GroupName="First Group"
                             IsEnabled="False" />

                <TextBlock Margin="0,10,0,5">Second Group</TextBlock>
                <RadioButton Content="Fourth Option" GroupName="Second Group" />
                <RadioButton Content="Fifth Option" GroupName="Second Group" />
            </StackPanel>
        </TabItem>
        <TabItem Header="SplitButton">
            <SplitButton Content="Content">
                <SplitButton.Flyout>
                    <MenuFlyout Placement="Bottom">
                        <MenuItem Header="Item 1">
                            <MenuItem Header="Subitem 1" />
                            <MenuItem Header="Subitem 2" />
                            <MenuItem Header="Subitem 3" />
                        </MenuItem>
                        <MenuItem Header="Item 2" InputGesture="Ctrl+A" />
                        <MenuItem Header="Item 3" />
                    </MenuFlyout>
                </SplitButton.Flyout>
            </SplitButton>
        </TabItem>
