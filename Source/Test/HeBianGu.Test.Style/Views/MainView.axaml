        <TabItem Header="TreeView">
            <TreeView ItemsSource="{Binding Nodes}">
                <TreeView.ItemTemplate>
                    <TreeDataTemplate ItemsSource="{Binding SubNodes}">
                        <TextBlock Text="{Binding Title}" />
                    </TreeDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </TabItem>
        <TabItem Header="UniformGrid">
            <UniformGrid Width="300"
                         Height="200"
                         Columns="3"
                         Rows="1">
                <Rectangle Grid.Row="0"
                           Grid.Column="0"
                           Fill="navy" />
                <Rectangle Grid.Row="0"
                           Grid.Column="1"
                           Fill="white" />
                <Rectangle Grid.Row="0"
                           Grid.Column="2"
                           Fill="red" />
            </UniformGrid>
        </TabItem>
        <TabItem Header="Viewbox">
            <Viewbox Width="300"
                     Height="300"
                     Stretch="Uniform">
                <Ellipse Width="50"
                         Height="50"
                         Fill="CornflowerBlue" />
            </Viewbox>
        </TabItem>
        <TabItem Header="WrapPanel">
            <WrapPanel>
                <Rectangle Width="100"
                           Height="100"
                           Margin="20"
                           Fill="Navy" />
                <Rectangle Width="100"
                           Height="100"
                           Margin="20"
                           Fill="Yellow" />
                <Rectangle Width="100"
                           Height="100"
                           Margin="20"
                           Fill="Green" />
                <Rectangle Width="100"
                           Height="100"
                           Margin="20"
                           Fill="Red" />
                <Rectangle Width="100"
                           Height="100"
                           Margin="20"
                           Fill="Purple" />
            </WrapPanel>
        </TabItem>
