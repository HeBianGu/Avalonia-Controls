                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Name="myGrid"
                                  RowDefinitions="auto, auto"
                                  ShowGridLines="True">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition SharedSizeGroup="A" />
                                    <ColumnDefinition SharedSizeGroup="B" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition SharedSizeGroup="C" />
                                </Grid.ColumnDefinitions>

