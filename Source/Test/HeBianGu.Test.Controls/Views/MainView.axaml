        <TabItem Header="ToggleSwitch">
            <StackPanel Margin="20">
                <ToggleSwitch />
            </StackPanel>
        </TabItem>
        <TabItem Header="ExperimentalAcrylicBorder">
            <Grid Margin="20">
                <ExperimentalAcrylicBorder Margin="10"
                                           CornerRadius="5"
                                           DockPanel.Dock="Bottom">
                    <ExperimentalAcrylicBorder.Material>
                        <ExperimentalAcrylicMaterial BackgroundSource="Digger" TintColor="White" />
                    </ExperimentalAcrylicBorder.Material>
                    <ToggleSwitch />
                </ExperimentalAcrylicBorder>
            </Grid>
        </TabItem>

        <TabItem Header="GridSplitter">
            <Grid Margin="20" ColumnDefinitions="200,5,*">
                <GridSplitter Grid.Column="1"
                              Margin="2"
                              Background="#e0e0e0"
                              BorderBrush="Gray"
                              BorderThickness="1"
                              ResizeBehavior="PreviousAndNext"
                              ResizeDirection="Columns" />
                <Border Grid.Column="2" Background="Red" />
                <Border Grid.Column="0" Background="Yellow" />
            </Grid>
        </TabItem>

        <TabItem Header="LayoutTransformControl">
            <StackPanel Margin="20">
                <LayoutTransformControl MinWidth="30" HorizontalAlignment="Center">
                    <LayoutTransformControl.LayoutTransform>
                        <RotateTransform Angle="90" />
                    </LayoutTransformControl.LayoutTransform>
                    <TextBlock>Resize me</TextBlock>
                </LayoutTransformControl>
            </StackPanel>
        </TabItem>

        <TabItem Header="AutoCompleteBox">
            <StackPanel Margin="20">
                <TextBlock Margin="0,5">Choose an animal:</TextBlock>
                <AutoCompleteBox x:Name="animals" FilterMode="StartsWith" />
            </StackPanel>
        </TabItem>
        <TabItem Header="Button">
            <Button Content="{Binding Greeting}" />
        </TabItem>
        <TabItem Header="TextBlock">
            <StackPanel Margin="20">
                <TextBlock Margin="0,5"
                           FontSize="18"
                           FontWeight="Bold">
                    Heading
                </TextBlock>
                <TextBlock Margin="0,5"
                           xml:space="preserve"
                           FontStyle="Italic">This is  a single line.</TextBlock>
                <TextBlock Margin="0,5" xml:space="preserve">This is a multi-line display
that has returns in it.
The text block respects the line breaks
as set out in XAML.</TextBlock>
            </StackPanel>
        </TabItem>
        <TabItem Header="Border">
            <StackPanel>
                <Border Margin="10"
                        Padding="10"
                        Background="Gainsboro"
                        BorderBrush="Black"
                        BorderThickness="2"
                        CornerRadius="3">
                    <TextBlock>Box 1</TextBlock>
                </Border>
                <Border Margin="10"
                        Padding="10"
                        Background="Gainsboro"
                        BorderBrush="Black"
                        BorderThickness="2"
                        CornerRadius="3">
                    <TextBlock>Box 2</TextBlock>
                </Border>
            </StackPanel>
