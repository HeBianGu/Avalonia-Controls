        <TabItem Header="ListBox">
            <ListBox AutoScrollToSelectedItem="True"
                     ItemsSource="{Binding People}"
                     SelectionMode="Multiple,Toggle" />
        </TabItem>
        <TabItem Header="MaskedTextBox">
            <StackPanel Margin="20">
                <TextBlock Margin="0,5">International phone number:</TextBlock>
                <MaskedTextBox Mask="(+09) 000 000 0000" />
                <TextBlock Margin="0,15,0,5">UK VAT number:</TextBlock>
                <MaskedTextBox Mask="GB 000 000 000" />
            </StackPanel>
        </TabItem>
        <TabItem Header="Menu">
            <DockPanel>
                <Menu DockPanel.Dock="Top">
                    <MenuItem Header="_File">
                        <MenuItem Header="_Open..." />
                        <Separator />
                        <MenuItem Header="_Exit" />
                    </MenuItem>
                    <MenuItem Header="_Edit">
                        <MenuItem Header="Copy" />
                        <MenuItem Header="Paste" />
                    </MenuItem>
                </Menu>
                <TextBlock />
            </DockPanel>
        </TabItem>
        <TabItem Header="NumericUpDown">
            <StackPanel Margin="20">
                <TextBlock Margin="0,5">Number of items:</TextBlock>
                <NumericUpDown Value="10" />
            </StackPanel>
        </TabItem>
        <TabItem Header="Panel">
            <Panel Width="300" Height="300">
                <Rectangle Height="100"
                           VerticalAlignment="Top"
                           Fill="Red" />
                <Rectangle Width="100"
                           HorizontalAlignment="Right"
                           Fill="Blue"
                           Opacity="0.5" />
                <Rectangle Height="100"
                           VerticalAlignment="Bottom"
                           Fill="Green"
                           Opacity="0.5" />
                <Rectangle Width="100"
                           HorizontalAlignment="Left"
                           Fill="Orange" />
            </Panel>
        </TabItem>
        <TabItem Header="ProgressBar">
            <StackPanel Margin="20">
                <ProgressBar Height="20"
                             Margin="0,10"
                             Maximum="100"
                             Minimum="0"
                             ShowProgressText="True"
                             Value="14" />
                <ProgressBar Height="20"
                             Margin="0,10"
                             Foreground="Red"
                             Maximum="100"
                             Minimum="0"
                             ShowProgressText="True"
                             Value="92" />
            </StackPanel>
        </TabItem>
        <TabItem Header="ScrollViewer">
            <Border Width="300"
                    Height="300"
                    Background="AliceBlue">
                <ScrollViewer>
                    <StackPanel>
                        <TextBlock Height="100"
                                   Background="LightBlue"
                                   FontSize="22">
                            Block 1
                        </TextBlock>
                        <TextBlock Height="100" FontSize="22">Block 2</TextBlock>
                        <TextBlock Height="100"
                                   Background="LightBlue"
                                   FontSize="22">
                            Block 3
                        </TextBlock>
                        <TextBlock Height="100" FontSize="22">Block 4</TextBlock>
                        <TextBlock Height="100"
                                   Background="LightBlue"
                                   FontSize="22">
                            Block 5
                        </TextBlock>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </TabItem>
        <TabItem Header="Slider">
            <StackPanel Margin="20">
                <TextBlock HorizontalAlignment="Center" Text="{Binding #slider.Value}" />
                <Slider x:Name="slider" />
            </StackPanel>
        </TabItem>
        <TabItem Header="SplitView">
            <SplitView DisplayMode="Inline"
                       IsPaneOpen="True"
                       OpenPaneLength="300">
                <SplitView.Pane>
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="24"
                               Text="Pane" />
                </SplitView.Pane>

                <Grid>
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="24"
                               Text="Content" />
                </Grid>
            </SplitView>
        </TabItem>
        <TabItem Header="HeaderedContentControl">
            <HeaderedContentControl Header="HeaderedContentControl">
                <HeaderedContentControl.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="2222" />
                    </DataTemplate>
                </HeaderedContentControl.HeaderTemplate>
                <Button Content="HeaderedContentControl" />
            </HeaderedContentControl>
        </TabItem>

    </TabControl>
</UserControl>
