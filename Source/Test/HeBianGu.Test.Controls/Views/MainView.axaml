                    </Carousel.PageTransition>
                    <Carousel.Items>
                        <Image Source="avares://HeBianGu.Test.Controls/Assets/1.jpg" />
                        <Image Source="avares://HeBianGu.Test.Controls/Assets/2.jpg" />
