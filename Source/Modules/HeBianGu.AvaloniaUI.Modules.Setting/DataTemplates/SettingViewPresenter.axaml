            <Button MinWidth="100"
                    Margin="2,0"
                    Command="{h:SumitDialogCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}}"
                    Content="确定"
                    DockPanel.Dock="Right" />

            --><!--<Button MinWidth="100"
