<DataTemplate xmlns="https://github.com/avaloniaui"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:local="clr-namespace:HeBianGu.AvaloniaUI.Form"
              DataType="local:TextPropertyViewItem">
    <TextBlock Margin="{DynamicResource {x:Static LayoutKeys.Padding}}"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"
               Text="{Binding Value}"
               TextWrapping="Wrap"
               ToolTip.Tip="{Binding Value}" />
</DataTemplate>
